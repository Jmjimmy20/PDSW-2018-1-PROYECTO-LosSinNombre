<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
                     
<mapper namespace="edu.eci.pdsw.project.dao.mybatis.mappers.UserMapper">
    
    <resultMap type='User' id='UserResult'>
        <id property='mail' column='useremail'/>        
        <result property='fullname' column='fullname'/>
        <result property='areaDepartment' column='userArea'/>
        <result property='pass' column='password'/>
    </resultMap>
    
    <select id='consultarUsuario' parameterType='map' resultMap='UserResult'>
        SELECT
            u.email as useremail,
            u.full_name as full_name,
            u.deparment_area as areaDepartment,
            u.pass as contrasenia
        FROM usuario AS u
        WHERE u.email = #{mail}
    </select>
    


</mapper>
